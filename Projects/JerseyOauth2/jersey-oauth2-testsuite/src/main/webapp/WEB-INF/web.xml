<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

 	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.github.hburgmeier.jerseyoauth2.testsuite.guice.ContextListener</listener-class>
	</listener>  

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>OAuth2</web-resource-name>
			<url-pattern>/oauth2/auth</url-pattern>
			<url-pattern>/oauth2/allow</url-pattern>
			<url-pattern>/rest/clientAuth</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>users</role-name>
		</auth-constraint>
	</security-constraint>

     <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>testsuite</realm-name>
    </login-config>

	<resource-ref>
		<res-ref-name>jdbc/authds</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
	</resource-ref>    

</web-app>